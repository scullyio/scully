{
  "name": "scully",
  "version": "0.0.2",
  "scripts": {
    "ng": "ng",
    "tsc": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "e2e": "cypress run --spec 'tests/cypress/integration/**/*' --browser chrome",
    "e2e:server": "start-server-and-test scully:run:cypress http://localhost:1668 e2e",
    "compile:all": "ng build @scullyio/ng-lib && ng build --project=sampleBlog && npm run scully:compile && npm run plugin:flash:build",
    "compile:prod": "ng build @scullyio/ng-lib --prod && ng build --project=sampleBlog --prod && npm run scully:compile && npm run plugins:build",
    "scully:precommit": "rm -rf ./dist && npm run compile:prod && npm run scully:run && npm run test && npm run e2e:server",
    "scully:publish:patch": "rm -rf ./dist/scully && cd ./scully && tsc -p ./tsconfig.scully.json && npm version patch && cp ./package.json ../dist/scully && cp ./readme.md ../dist/scully && cd ../dist/scully && npm publish --access=public",
    "scully:compile": "tsc -p ./scully/tsconfig.scully.json",
    "scully:compile:watch": "tsc -w -p ./scully/tsconfig.scully.json",
    "scully:compile:run": "npm run scully:compile && npm run scully:run",
    "scully:run": "node ./dist/scully/scully --tds --project=sampleBlog",
    "scully:run:docs": "node ./dist/scully/scully --tds --project=scullyDocs --hl=true ",
    "scully:run:tests": "npm run test && npm run e2e:server",
    "scully:run:cypress": "node ./dist/scully/scully serve --project=sampleBlog --tds",
    "scully:dev": "node ./dist/scully/scully dev --tds --project=sampleBlog",
    "scully:serve": "node ./dist/scully/scully serve --tds --project=sampleBlog",
    "scully:ssl:test": "npm run scully:compile:serve -- --ssl",
    "scully:ssl:test:file": "npm run scully:compile:run -- --ssl --ssl-cert=./tests/certs/localhost.cert --ssl-key=./tests/certs/localhost.key",
    "plugins:build": "npm run plugin:flash:build -- --deploy=false",
    "plugin:flash:build": "rm -rf dist/scully-plugin-flash-prevention && tsc -p ./plugins/scully-plugin-flash-prevention/tsconfig.lib.json && node ./plugins/scully-plugin-flash-prevention/build.js",
    "plugin:flash:publish": "npm run plugin:flash:build -- --deploy=true",
    "docs:playground": "angular-playground",
    "docs:run": "ng serve --project=scullyDocs",
    "docs:build": "ng build --prod  && npm run scully:run:docs",
    "changelog": "npx conventional-changelog -p scully -i ./CHANGELOG.md -s && git add ./CHANGELOG.md",
    "commit": "git add . && npx git-cz",
    "commit:select": "npx git-cz"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.0.7",
    "@angular/common": "~9.0.7",
    "@angular/compiler": "~9.0.7",
    "@angular/core": "~9.0.7",
    "@angular/forms": "~9.0.7",
    "@angular/platform-browser": "~9.0.7",
    "@angular/platform-browser-dynamic": "~9.0.7",
    "@angular/platform-server": "~9.0.7",
    "@angular/router": "~9.0.7",
    "@briebug/jest-schematic": "^2.1.1",
    "@scullyio/scully": "0.0.86",
    "@types/compression": "^1.7.0",
    "@types/minimatch": "^3.0.3",
    "@types/ws": "^7.2.3",
    "chalk": "^4.0.0",
    "compression": "^1.7.4",
    "cz-customizable": "^6.2.0",
    "jsdom": "^16.2.1",
    "minimatch": "^3.0.4",
    "rxjs": "^6.5.3",
    "semver": "^7.1.3",
    "tslib": "^1.11.1",
    "ws": "^7.2.3",
    "zone.js": "^0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.900.7",
    "@angular-devkit/build-ng-packagr": "~0.900.7",
    "@angular/cli": "~9.0.7",
    "@angular/compiler-cli": "~9.0.7",
    "@angular/language-service": "~9.0.7",
    "@bazel/bazel": "^2.1.0",
    "@bazel/buildifier": "^2.2.1",
    "@bazel/ibazel": "^0.12.3",
    "@types/chalk": "^2.2.0",
    "@types/express": "^4.17.3",
    "@types/fs-extra": "^8.1.0",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/jasmine": "^3.5.9",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^25.1.4",
    "@types/jsdom": "^16.1.0",
    "@types/json5": "^0.0.30",
    "@types/marked": "^0.7.3",
    "@types/node": "^12.11.1",
    "@types/puppeteer": "^2.0.1",
    "@types/request": "^2.48.4",
    "@types/yamljs": "^0.2.30",
    "@types/yargs": "^15.0.4",
    "angular-playground": "^7.0.0",
    "asciidoctor.js": "^1.5.9",
    "codelyzer": "^5.1.2",
    "conventional-changelog": "^3.1.18",
    "cypress": "^4.3.0",
    "cz-conventional-changelog": "^3.1.0",
    "express": "^4.17.1",
    "front-matter": "^3.0.2",
    "fs-extra": "^9.0.0",
    "guess-parser": "^0.4.17",
    "highlight.js": "^9.18.1",
    "http-proxy-middleware": "^1.0.3",
    "husky": "^4.2.3",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^25.1.0",
    "jest-preset-angular": "^8.1.2",
    "jsonc": "^2.0.0",
    "marked": "^0.8.1",
    "ng-packagr": "^9.0.2",
    "nodemon": "^2.0.2",
    "osascript": "^1.2.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "protractor": "^5.4.3",
    "puppeteer": "^2.1.1",
    "start-server-and-test": "^1.10.11",
    "ts-node": "^8.7.0",
    "tsickle": "^0.38.1",
    "tslint": "^6.1.0",
    "typescript": "^3.6.4",
    "wait-on": "^4.0.1",
    "yamljs": "^0.3.0",
    "yargs": "^15.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "jest-preset-angular",
    "roots": [
      "tests/jest/src"
    ],
    "transform": {
      "^.+\\.(ts|js|html)$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "./tests/jest/src/setup-jest.ts"
    ],
    "moduleNameMapper": {
      "@app/(.*)": "<rootDir>/ng-projects/sampleBlog/src/app/$1",
      "@assets/(.*)": "<rootDir>/ng-projects/sampleBlog/src/assets/$1",
      "@env": "<rootDir>/ng-projects/sampleBlog/src/environments/environment",
      "@src/(.*)": "<rootDir>/ng-projects/sampleBlog/src/$1",
      "@scullyio/ng-lib": "<rootDir>/dist/scullyio/ng-lib"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$",
        "astTransformers": [
          "jest-preset-angular/build/InlineFilesTransformer",
          "jest-preset-angular/build/StripStylesTransformer"
        ]
      }
    }
  }
}
